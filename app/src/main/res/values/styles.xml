<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>


    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/bgBlue</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="colorAccent">@color/bgBlue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/textBlack</item>
        <item name="android:windowBackground">@color/textWhite</item>
        <item name="colorControlNormal">@color/lightTranBlack</item>
    </style>

    <!-- 欢迎页面全屏显示，解决启动时黑屏问题 -->
    <style name="WelcomePage" parent="AppTheme">
        <!-- 窗口没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <!-- 窗口全屏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 窗口透明 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Login" parent="AppTheme">
        <item name="colorControlNormal">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="project_list_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Login_txt">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="MenuText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="SettingTextBlack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="SettingTextGray">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    
    <style name="PersonalCenterText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="project_list_someinfo">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="project_detail">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">18sp</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
